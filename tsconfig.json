{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["dom", "es7"],
        "jsx": "react",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "typeRoots": ["src/types", "./node_modules/@types"],
        "paths": {
            "App/*": ["./src/*"]
        }
    },
    "typeRoots": ["src/types", "./node_modules/@types"],
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "src/types"]
}
